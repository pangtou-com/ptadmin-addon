{
    "name": "ptadmin/addon",
    "description": "ptadmin 管理平台插件应用管理包，需要搭配PTAdmin 管理平台使用",
    "version": "v0.1.6",
    "license": "Apache-2.0",
    "keywords": ["HTML", "admin", "管理后台", "插件应用", "低代码平台", "addon", "PTAdmin"],
    "type": "library",
    "homepage": "https://github.com/ptadmin/html",
    "authors": [
        {"name": "Zane", "email": "873934580@qq.com"}
    ],
    "require": {
        "php": "^7.3 | ^8.0",
        "ext-json": "*",
        "laravel/framework": "^8.0|^9.0|^10.0",
        "ext-openssl": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-strict-rules": "^1.5",
        "phpunit/phpunit": "^9.5.10",
        "orchestra/testbench": "^5.0|^6.0|^7.0|^8.0",
        "mockery/mockery": "^1.6",
        "pestphp/pest": "^1.23",
        "pestphp/pest-plugin-laravel": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "PTAdmin\\Addon\\": "src/"
        },
        "files": [
            "src/Helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "PTAdmin\\AddonTests\\": "tests/"
        }
    },
    "scripts": {
        "phpstan": "vendor/bin/phpstan.phar analyse app addons package --configuration phpstan.neon",
        "test:pest": "./vendor/bin/pest --no-interaction",
        "test:build": "XDEBUG_MODE=coverage ./vendor/bin/pest --coverage "
    },
    "extra": {
        "laravel": {
            "providers": [
                "PTAdmin\\Addon\\Providers\\AddonServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
